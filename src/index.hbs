  <body>
    {{> templates/navbar }}

    <section class="hero">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            Brendan Devenney
          </h1>
          <h2 class="subtitle">
            Software Development, Operations & Reliability Engineering
          </h2>
        </div>
      </div>
    </section>

